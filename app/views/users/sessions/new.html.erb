<!-- Side Bar -->
<div class="large-12 columns">
  <div class="large-4 columns panel">
  	<h3 align="center">Sign In</h3><br />
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        
        <div class="row">
	      <div class="large-6 columns">
	        <%= devise_error_messages! %>
	      </div>
	    </div>

	    <div class="row">
	      <div class="large-3 columns">
	        <label class="inline">EMail-ID</label>
	      </div>
	      <div class="large-9 columns">
	        <%= f.email_field :email, :autofocus => true %>
	      </div>
	    </div>
	    
	

	    <div class="row">
	      <div class="large-3 columns">
	        <label class="inline">Password</label>
	      </div>
	      <div class="large-9 columns">
	        <%= f.password_field :password %>
	      </div>
	    </div>

	    <div class="row">
	      <div class="large-8 columns">
	       <% if devise_mapping.rememberable? -%>
             <%= f.check_box :remember_me %> 
             <%= f.label :remember_me %>
           <% end %>
          </div>
	    </div>

	    <div class="large3 columns">
	      <button type="submit" class="[tiny round small large]">Sign In</button>	  
	      <%= render "users/shared/links" %>

	    </div>
	  <% end %>

  </div>

  <div class="large-5 columns panel">
    <img src="/assets/32890.jpg" alt="" />
  </div>
</div> 


