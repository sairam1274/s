<!-- Side Bar -->
<div class="large-12 columns">
  <div class="row">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <div class="row">
	  <div class="large-6 columns">
	    <%= devise_error_messages! %>
	  </div>
	</div>
	
	<fieldset class="large-12 columns">
      <legend align="center" style="background-color:transparent;">
      	<h3 >Registration Form</h3>
      </legend>
        <div class="row"> 
		
			<div class="large-4 columns"> 
				<label>*FirstName</label> 
				<input type="text" name ="user[firstname]" placeholder="enter your name" /> 
			</div> 

			<div class="large-4 columns"> 
				<label>*SurName</label> 
				<input type="text"  name ="user[surname]" placeholder="enter your surname" /> 
			</div>  

			<div class="large-4 columns"> 
				<label>*FatherName</label> 
				<input type="text"  name ="user[fathername]" placeholder="enter your fathername" /> 
			</div>

			<div class="large-4 columns"> 
				<label>*Mobile Number</label> 
				<input type="text"  name ="user[mobileno]"placeholder="enter your mobilenumber" /> 
			</div> 

		    <div class="large-4 columns"> 
			  <label>*Date of Birth</label> 
	          <input type="text"id="datepicker" name="user[dob]"placeholder="enter your date of birth" />
	        </div> 

		    <div class="large-4 columns"> 
			  <label>*Gender</label> 
		      <h6 class="inline">
		      	<input type="radio" name="user[gender]" value="Male" id="pokemonRed">&nbsp;Male&nbsp;
		        <input type="radio" name="user[gender]" value="Female" id="pokemonBlue">&nbsp;Female
		      </h6>
		    </div> 
	    </div>
		<div class="row"> 
            
            <div class="large-4 columns"> 
            	<label>*Email-Id</label> 
			    <%= f.email_field :email, :autofocus => true, :placeholder => "enter your email id" %>
			</div> 

			<div class="large-4 columns">
		        <label>*Password</label>
		        <%= f.password_field :password , :placeholder => "enter your password"%>
		    </div>
		
            <div class="large-4 columns">
		        <label>*Confirm Password</label>
		        <%= f.password_field :password_confirmation, :placeholder => "re-enter your password" %>
		    </div>
        </div>
        <div class="row">
		    <div class="large-4 columns"> 
			  <label>*Address</label> 
			  <textarea placeholder="fill your complete address"  name ="user[address]"></textarea> 
			</div> 
		</div> 

	    <button type="submit" class="[tiny round success inverse  large]" align="center">Register</button>

  <% end %>
  </fieldset>

</div>
</div>
<style type="text/css">

button{
	float:left;
	margin-left: 45%;
}
</style>





















